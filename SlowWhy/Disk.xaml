<UserControl x:Class="SlowWhy.Disk"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="400">

    <Grid Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" BorderBrush="#D0D0D0" BorderThickness="0,0,0,1" Padding="10">
            <Grid>
                <Button x:Name="btnBack" Content="← Geri" HorizontalAlignment="Left" Width="50" Height="25" Background="Transparent" BorderThickness="0" Foreground="#0078D7" Click="btnBack_Click" Cursor="Hand"/>
                <TextBlock Text="Dosya Gezgini (C:\)" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#333"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="10">
            <DataGrid x:Name="dgFiles" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True" 
                      Background="White" 
                      Foreground="#333"
                      BorderBrush="#ADADAD"
                      BorderThickness="1"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#E0E0E0"
                      HeadersVisibility="Column"
                      RowHeight="25"
                      FontSize="12">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="2*"/>
                    <DataGridTextColumn Header="Size" Binding="{Binding FileSize}" Width="1*"/>
                    <DataGridTextColumn Header="Path" Binding="{Binding FullPath}" Width="3*"/>
                </DataGrid.Columns>
            </DataGrid>

            <TextBlock x:Name="txtLoading" Text="Receiving data..." HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#888" Visibility="Collapsed"/>
        </Grid>
    </Grid>
</UserControl>
<UserControl x:Class="SlowWhy.CPU"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="400">

    <Grid Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" BorderBrush="#D0D0D0" BorderThickness="0,0,0,1" Padding="10">
            <Grid>
                <Button x:Name="btnBack" 
                        Content="← Back" 
                        HorizontalAlignment="Left" 
                        Width="50" Height="25" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Foreground="#0078D7" 
                        Cursor="Hand"
                        Click="btnBack_Click"/>

                <TextBlock Text="Processor (CPU)" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           FontWeight="SemiBold" 
                           Foreground="#333"/>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="White" Margin="10" Padding="15" BorderBrush="#D0D0D0" BorderThickness="1">
            <StackPanel>
                <Grid>
                    <TextBlock Text="Total Utilization" Foreground="#666" VerticalAlignment="Bottom" FontSize="12"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock x:Name="txtTotalUsage" Text="0%" FontSize="36" FontWeight="Normal" Foreground="#0078D7"/>
                    </StackPanel>
                </Grid>

                <ProgressBar x:Name="pbTotalUsage" 
                             Height="4" 
                             Value="0" 
                             Maximum="100" 
                             Margin="0,5,0,0" 
                             BorderThickness="0"
                             Background="#E0E0E0"
                             Foreground="#0078D7"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2" Margin="10,0,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Top Processes" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>

            <DataGrid x:Name="dgProcesses" 
                      Grid.Row="1"
                      AutoGenerateColumns="False" 
                      IsReadOnly="True" 
                      Background="White" 
                      Foreground="#333"
                      BorderBrush="#ADADAD"
                      BorderThickness="1"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#E0E0E0"
                      HeadersVisibility="Column"
                      RowHeight="28"
                      FontSize="12"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Process Name" Binding="{Binding Name}" Width="2*"/>
                    <DataGridTextColumn Header="PID" Binding="{Binding Id}" Width="0.8*"/>
                    <DataGridTextColumn Header="CPU %" Binding="{Binding Usage}" Width="1*" FontWeight="Bold"/>
                </DataGrid.Columns>

                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Close" Click="CpuAppClose_Click"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
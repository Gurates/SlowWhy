<Application
  x:Class="SlowWhy.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:hc="https://handyorg.github.io/handycontrol"
  StartupUri="src/MainWindow.xaml">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <hc:ThemeResources UsingSystemTheme="True" />
        <hc:Theme />
        <ResourceDictionary Source="src/Styles/DataGridStyles.xaml" />
        <ResourceDictionary Source="src/Styles/ButtonStyles.xaml" />
        <ResourceDictionary Source="src/Styles/BorderStyles.xaml" />
        <ResourceDictionary Source="src/Styles/ComboBoxStyles.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="MenuBackgroundBrush" Color="#2D2D30"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="#CCCCCC"/>

    <SolidColorBrush x:Key="BorderBrush" Color="#3F3F46"/>
    <SolidColorBrush x:Key="BorderHoverBrush" Color="#0078D7"/>

    <SolidColorBrush x:Key="AccentBrush" Color="#0078D7"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#1E90FF"/>

    <SolidColorBrush x:Key="StatusBarBrush" Color="#252526"/>

    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#3F3F46"/>

    <SolidColorBrush x:Key="CardHoverBrush" Color="#3E3E42"/>

    <SolidColorBrush x:Key="ProgressBackgroundBrush" Color="#3F3F46"/>

    <Style TargetType="MenuItem">
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="Background" Value="#2D2D30"/>
        <Style.Triggers>
            <Trigger Property="IsHighlighted" Value="True">
                <Setter Property="Background" Value="#3E3E42"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Separator">
        <Setter Property="Background" Value="#3F3F46"/>
    </Style>
</ResourceDictionary>
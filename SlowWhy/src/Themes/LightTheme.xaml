<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="BackgroundBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="MenuBackgroundBrush" Color="White"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#333333"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#555555"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="#666666"/>

    <SolidColorBrush x:Key="BorderBrush" Color="#D0D0D0"/>
    <SolidColorBrush x:Key="BorderHoverBrush" Color="#0078D7"/>

    <SolidColorBrush x:Key="AccentBrush" Color="#0078D7"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#005A9E"/>

    <SolidColorBrush x:Key="StatusBarBrush" Color="#F3F3F3"/>

    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#E1E1E1"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#333333"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#ADADAD"/>

    <SolidColorBrush x:Key="CardHoverBrush" Color="#F9F9F9"/>

    <SolidColorBrush x:Key="ProgressBackgroundBrush" Color="#E0E0E0"/>

    <Style TargetType="MenuItem">
        <Setter Property="Foreground" Value="#333333"/>
        <Setter Property="Background" Value="White"/>
        <Style.Triggers>
            <Trigger Property="IsHighlighted" Value="True">
                <Setter Property="Background" Value="#F0F0F0"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Separator">
        <Setter Property="Background" Value="#D0D0D0"/>
    </Style>
</ResourceDictionary>
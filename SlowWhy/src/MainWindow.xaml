<hc:Window
  x:Class="SlowWhy.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:hc="https://handyorg.github.io/handycontrol"
  xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
  Title="SlowWhy"
  Width="420"
  Height="600"
  ResizeMode="CanMinimize"
  WindowStartupLocation="CenterScreen">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <Menu Grid.Row="0">
      <MenuItem Header="_File">
        <MenuItem Click="MenuExit_Click" Header="E_xit">
          <MenuItem.Icon>
            <icon:PackIconPhosphorIcons Kind="SignOut" Width="14" Height="14" />
          </MenuItem.Icon>
        </MenuItem>
      </MenuItem>

      <MenuItem Header="_View">
        <MenuItem Click="MenuDashboard_Click" Header="Dashboard">
          <MenuItem.Icon>
            <icon:PackIconPhosphorIcons Kind="House" Width="14" Height="14" />
          </MenuItem.Icon>
        </MenuItem>
        <MenuItem
          x:Name="menuTheme"
          Click="themeSwitch"
          Header="Toggle Theme">
          <MenuItem.Icon>
            <icon:PackIconPhosphorIcons Kind="Moon" Width="14" Height="14" />
          </MenuItem.Icon>
        </MenuItem>
        <MenuItem Click="MenuRefresh_Click" Header="Refresh Data">
          <MenuItem.Icon>
            <icon:PackIconPhosphorIcons Kind="ArrowClockwise" Width="14" Height="14" />
          </MenuItem.Icon>
        </MenuItem>
      </MenuItem>

      <MenuItem Header="_Help">
        <MenuItem Click="MenuGithub_Click" Header="GitHub Repo">
          <MenuItem.Icon>
            <icon:PackIconPhosphorIcons Kind="GithubLogo" Width="14" Height="14" />
          </MenuItem.Icon>
        </MenuItem>
        <MenuItem Click="MenuAbout_Click" Header="About SlowWhy">
          <MenuItem.Icon>
            <icon:PackIconPhosphorIcons Kind="Info" Width="14" Height="14" />
          </MenuItem.Icon>
        </MenuItem>
      </MenuItem>
    </Menu>

    <TextBlock
      Grid.Row="1"
      Margin="15,12,15,8"
      FontSize="16"
      FontWeight="SemiBold"
      Text="System Status" />

    <Grid Grid.Row="2" Margin="15,0">
      <ScrollViewer x:Name="MainDashboard" VerticalScrollBarVisibility="Auto">
        <hc:UniformSpacingPanel Orientation="Vertical" Spacing="10">

          <Border
            Padding="14,12"
            Background="{DynamicResource RegionBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Cursor="Hand"
            MouseLeftButtonDown="CPU_Click">
            <Grid>
              <StackPanel Orientation="Horizontal">
                <icon:PackIconPhosphorIcons
                  Kind="Cpu"
                  Width="20" Height="20"
                  VerticalAlignment="Center"
                  Foreground="{DynamicResource PrimaryBrush}" />
                <TextBlock
                  Margin="10,0,0,0"
                  VerticalAlignment="Center"
                  FontSize="13"
                  Text="Processor (CPU)" />
              </StackPanel>
              <TextBlock
                x:Name="txtCpu"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FontSize="18"
                FontWeight="SemiBold"
                Text="---" />
            </Grid>
          </Border>

          <Border
            Padding="14,12"
            Background="{DynamicResource RegionBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Cursor="Hand"
            MouseLeftButtonDown="Ram_Click">
            <Grid>
              <StackPanel Orientation="Horizontal">
                <icon:PackIconPhosphorIcons
                  Kind="Memory"
                  Width="20" Height="20"
                  VerticalAlignment="Center"
                  Foreground="{DynamicResource SuccessBrush}" />
                <TextBlock
                  Margin="10,0,0,0"
                  VerticalAlignment="Center"
                  FontSize="13"
                  Text="Memory (RAM)" />
              </StackPanel>
              <TextBlock
                x:Name="txtRam"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FontSize="18"
                FontWeight="SemiBold"
                Text="---" />
            </Grid>
          </Border>

          <Border
            Padding="14,12"
            Background="{DynamicResource RegionBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Cursor="Hand"
            MouseLeftButtonDown="GPU_Click">
            <Grid>
              <StackPanel Orientation="Horizontal">
                <icon:PackIconPhosphorIcons
                  Kind="Monitor"
                  Width="20" Height="20"
                  VerticalAlignment="Center"
                  Foreground="{DynamicResource WarningBrush}" />
                <TextBlock
                  Margin="10,0,0,0"
                  VerticalAlignment="Center"
                  FontSize="13"
                  Text="Graphics Card (GPU)" />
              </StackPanel>
              <TextBlock
                x:Name="txtGpu"
                MaxWidth="160"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FontSize="12"
                Text="---"
                TextAlignment="Right"
                TextWrapping="Wrap" />
            </Grid>
          </Border>

          <Border
            Padding="14,12"
            Background="{DynamicResource RegionBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Cursor="Hand"
            MouseLeftButtonDown="DiskCard_Click">
            <Grid>
              <StackPanel Orientation="Horizontal">
                <icon:PackIconPhosphorIcons
                  Kind="HardDrives"
                  Width="20" Height="20"
                  VerticalAlignment="Center"
                  Foreground="{DynamicResource DangerBrush}" />
                <TextBlock
                  Margin="10,0,0,0"
                  VerticalAlignment="Center"
                  FontSize="13"
                  Text="Local Disk (C:)" />
              </StackPanel>
              <TextBlock
                x:Name="txtDisk"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FontSize="18"
                FontWeight="SemiBold"
                Text="---" />
            </Grid>
          </Border>

        </hc:UniformSpacingPanel>
      </ScrollViewer>

      <ContentControl x:Name="PagesContainer" Visibility="Collapsed" />
    </Grid>

    <Button
      x:Name="btnRamClear"
      Grid.Row="3"
      Height="38"
      Margin="15,10"
      hc:IconElement.Geometry="{x:Null}"
      Click="btnRamClear_Click"
      Style="{StaticResource ButtonPrimary}">
      <StackPanel Orientation="Horizontal">
        <icon:PackIconPhosphorIcons Kind="Broom" Width="14" Height="14" VerticalAlignment="Center" />
        <TextBlock Margin="6,0,0,0" Text="Quick Clean RAM" VerticalAlignment="Center" />
      </StackPanel>
    </Button>

    <StatusBar Grid.Row="4">
      <StatusBarItem HorizontalContentAlignment="Stretch">
        <TextBlock
          x:Name="txtStatusUpdate"
          FontSize="10"
          Text="Quick clean does not perform a deep RAM cleanup; for a deeper cleanup, go to the RAM tab."
          TextAlignment="Center"
          TextWrapping="Wrap" />
      </StatusBarItem>
    </StatusBar>
  </Grid>
</hc:Window>

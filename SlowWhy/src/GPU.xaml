<UserControl
  x:Class="SlowWhy.GPU"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:hc="https://handyorg.github.io/handycontrol"
  xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="500"
  d:DesignWidth="450"
  mc:Ignorable="d">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <Border
      Grid.Row="0"
      Padding="12,10"
      BorderBrush="{DynamicResource BorderBrush}"
      BorderThickness="0,0,0,1">
      <Grid>
        <Button
          Padding="8,4"
          HorizontalAlignment="Left"
          Click="btnBack_Click"
          Style="{StaticResource ButtonIconCustom}">
          <StackPanel Orientation="Horizontal">
            <icon:PackIconPhosphorIcons
              Width="14"
              Height="14"
              VerticalAlignment="Center"
              Kind="ArrowLeft" />
            <TextBlock
              Margin="4,0,0,0"
              VerticalAlignment="Center"
              Text="Back" />
          </StackPanel>
        </Button>

        <StackPanel
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Orientation="Horizontal">
          <icon:PackIconPhosphorIcons
            Width="16"
            Height="16"
            VerticalAlignment="Center"
            Foreground="{DynamicResource WarningBrush}"
            Kind="GraphicsCard" />
          <TextBlock
            Margin="6,0,0,0"
            VerticalAlignment="Center"
            FontSize="14"
            FontWeight="SemiBold"
            Text="Graphics Card (GPU)" />
        </StackPanel>
      </Grid>
    </Border>

    <ScrollViewer
      Grid.Row="1"
      HorizontalScrollBarVisibility="Disabled"
      VerticalScrollBarVisibility="Auto">
      <hc:UniformSpacingPanel
        Margin="15"
        Orientation="Vertical"
        Spacing="12">

        <Border
          Padding="20"
          Background="{DynamicResource RegionBrush}"
          BorderBrush="{DynamicResource BorderBrush}"
          BorderThickness="1"
          CornerRadius="4">
          <StackPanel>
            <TextBlock
              x:Name="txtGpuName"
              Margin="0,0,0,15"
              FontSize="15"
              FontWeight="Bold"
              Text="Loading GPU Name..."
              TextWrapping="Wrap" />

            <Grid Margin="0,0,0,5">
              <TextBlock
                VerticalAlignment="Bottom"
                FontSize="13"
                Text="3D Usage" />
              <TextBlock
                x:Name="txtUsage"
                HorizontalAlignment="Right"
                FontSize="36"
                Foreground="{DynamicResource PrimaryBrush}"
                Text="0%" />
            </Grid>

            <ProgressBar
              x:Name="pbUsage"
              Maximum="100"
              Value="0" />
          </StackPanel>
        </Border>

        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="12" />
            <ColumnDefinition Width="*" />
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="12" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>

          <Border
            Grid.Row="0"
            Grid.Column="0"
            Padding="15"
            Background="{DynamicResource RegionBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4">
            <StackPanel>
              <TextBlock
                FontSize="11"
                Foreground="{DynamicResource SecondaryTextBrush}"
                Text="VRAM Memory" />
              <TextBlock
                x:Name="txtVramTotal"
                Margin="0,5,0,0"
                FontSize="18"
                FontWeight="SemiBold"
                Text="-- GB" />
            </StackPanel>
          </Border>

          <Border
            Grid.Row="0"
            Grid.Column="2"
            Padding="15"
            Background="{DynamicResource RegionBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4">
            <StackPanel>
              <TextBlock
                FontSize="11"
                Foreground="{DynamicResource SecondaryTextBrush}"
                Text="Driver Version" />
              <TextBlock
                x:Name="txtDriver"
                Margin="0,5,0,0"
                FontSize="12"
                FontWeight="SemiBold"
                Text="--"
                TextWrapping="Wrap" />
            </StackPanel>
          </Border>

          <Border
            Grid.Row="2"
            Grid.Column="0"
            Padding="15"
            Background="{DynamicResource RegionBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4">
            <StackPanel>
              <TextBlock
                FontSize="11"
                Foreground="{DynamicResource SecondaryTextBrush}"
                Text="Resolution" />
              <TextBlock
                x:Name="txtResolution"
                Margin="0,5,0,0"
                FontSize="14"
                FontWeight="SemiBold"
                Text="-- x --"
                TextWrapping="Wrap" />
            </StackPanel>
          </Border>

          <Border
            Grid.Row="2"
            Grid.Column="2"
            Padding="15"
            Background="{DynamicResource RegionBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4">
            <StackPanel>
              <TextBlock
                FontSize="11"
                Foreground="{DynamicResource SecondaryTextBrush}"
                Text="Refresh Rate" />
              <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                <TextBlock
                  x:Name="txtRefresh"
                  FontSize="20"
                  FontWeight="SemiBold"
                  Foreground="{DynamicResource SuccessBrush}"
                  Text="--" />
                <TextBlock
                  Margin="3,0,0,4"
                  VerticalAlignment="Bottom"
                  FontSize="12"
                  Foreground="{DynamicResource SecondaryTextBrush}"
                  Text="Hz" />
              </StackPanel>
            </StackPanel>
          </Border>
        </Grid>

      </hc:UniformSpacingPanel>
    </ScrollViewer>
  </Grid>
</UserControl>

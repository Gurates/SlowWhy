<UserControl x:Class="SlowWhy.GPU"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="450">

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="{DynamicResource CardBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="0,0,0,1" 
                Padding="15,10">
            <Grid>
                <Button x:Name="btnBack" 
                        Content="← Back" 
                        HorizontalAlignment="Left" 
                        Width="60" Height="28" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Foreground="{DynamicResource AccentBrush}" 
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="btnBack_Click"/>

                <TextBlock Text="Graphics Card (GPU)" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           FontWeight="SemiBold" 
                           FontSize="14"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="15">

                <Border Background="{DynamicResource CardBackgroundBrush}" 
                        Padding="20" 
                        BorderBrush="{DynamicResource BorderBrush}" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock x:Name="txtGpuName" 
                                   Text="Loading GPU Name..." 
                                   Foreground="{DynamicResource TextPrimaryBrush}" 
                                   FontWeight="Bold" 
                                   FontSize="15" 
                                   Margin="0,0,0,15" 
                                   TextWrapping="Wrap"/>

                        <Grid Margin="0,0,0,5">
                            <TextBlock Text="3D Usage" 
                                       Foreground="{DynamicResource TextSecondaryBrush}" 
                                       VerticalAlignment="Bottom" 
                                       FontSize="13"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock x:Name="txtUsage" 
                                           Text="0%" 
                                           FontSize="36" 
                                           FontWeight="Normal" 
                                           Foreground="{DynamicResource AccentBrush}"/>
                            </StackPanel>
                        </Grid>

                        <ProgressBar x:Name="pbUsage" 
                                     Height="6" 
                                     Value="0" 
                                     Maximum="100" 
                                     BorderThickness="0"
                                     Background="{DynamicResource ProgressBackgroundBrush}"
                                     Foreground="{DynamicResource AccentBrush}"/>
                    </StackPanel>
                </Border>

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" 
                            Background="{DynamicResource CardBackgroundBrush}" 
                            Padding="15" 
                            BorderBrush="{DynamicResource BorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="4">
                        <StackPanel>
                            <TextBlock Text="VRAM Memory" 
                                       Foreground="{DynamicResource TextSecondaryBrush}" 
                                       FontSize="11"/>
                            <TextBlock x:Name="txtVramTotal" 
                                       Text="-- GB" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextPrimaryBrush}" 
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="0" Grid.Column="2" 
                            Background="{DynamicResource CardBackgroundBrush}" 
                            Padding="15" 
                            BorderBrush="{DynamicResource BorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="4">
                        <StackPanel>
                            <TextBlock Text="Driver Version" 
                                       Foreground="{DynamicResource TextSecondaryBrush}" 
                                       FontSize="11"/>
                            <TextBlock x:Name="txtDriver" 
                                       Text="--" 
                                       FontSize="12" 
                                       FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextPrimaryBrush}" 
                                       Margin="0,5,0,0" 
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="2" Grid.Column="0" 
                            Background="{DynamicResource CardBackgroundBrush}" 
                            Padding="15" 
                            BorderBrush="{DynamicResource BorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="4">
                        <StackPanel>
                            <TextBlock Text="Resolution" 
                                       Foreground="{DynamicResource TextSecondaryBrush}" 
                                       FontSize="11"/>
                            <TextBlock x:Name="txtResolution" 
                                       Text="-- x --" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextPrimaryBrush}" 
                                       Margin="0,5,0,0" 
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="2" Grid.Column="2" 
                            Background="{DynamicResource CardBackgroundBrush}" 
                            Padding="15" 
                            BorderBrush="{DynamicResource BorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="4">
                        <StackPanel>
                            <TextBlock Text="Refresh Rate" 
                                       Foreground="{DynamicResource TextSecondaryBrush}" 
                                       FontSize="11"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock x:Name="txtRefresh" 
                                           Text="--" 
                                           FontSize="20" 
                                           FontWeight="SemiBold" 
                                           Foreground="#28A745"/>
                                <TextBlock Text="Hz" 
                                           Foreground="{DynamicResource TextTertiaryBrush}" 
                                           FontSize="12" 
                                           VerticalAlignment="Bottom" 
                                           Margin="3,0,0,4"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
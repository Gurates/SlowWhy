<UserControl x:Class="SlowWhy.Ram"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="400">

    <Grid Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" BorderBrush="#D0D0D0" BorderThickness="0,0,0,1" Padding="10">
            <Grid>
                <Button x:Name="btnBack" Content="← Geri" HorizontalAlignment="Left" Width="50" Height="25" Background="Transparent" BorderThickness="0" Foreground="#0078D7" Click="btnBack_Click" Cursor="Hand"/>
                <TextBlock Text="Memory Management" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#333"/>
            </Grid>
        </Border>

        <StackPanel Grid.Row="1" Margin="20" VerticalAlignment="Center">
            <Border Background="White" BorderBrush="#D0D0D0" BorderThickness="1" Padding="20">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Available RAM" Foreground="#666" FontSize="12" HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,5">
                        <TextBlock x:Name="txtRam" Text="---" Foreground="#333" FontSize="40" FontWeight="Normal"/>
                        <TextBlock Text="GB" Foreground="#666" FontSize="14" VerticalAlignment="Bottom" Margin="5,0,0,8"/>
                    </StackPanel>
                    <TextBlock Text="System performance is good." Foreground="#0000" FontSize="11" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <Border Grid.Row="2" Background="White" BorderBrush="#D0D0D0" BorderThickness="0,1,0,0" Padding="15">
            <Button x:Name="btnRamClear" 
                    Content="Belleği Temizle" 
                    Height="35" 
                    Background="#0078D7" 
                    Foreground="White" 
                    BorderThickness="0" 
                    Click="btnRamClear_Click"
                    Cursor="Hand"/>
        </Border>
    </Grid>
</UserControl>